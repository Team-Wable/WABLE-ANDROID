<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- [component] -->
    <!-- button -->
    <style name="Wable.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="Wable.Button.L" parent="Wable.Button">
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Head2</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Wable.Button.M.S" parent="Wable.Button">
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Body1</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Wable.Button.XS" parent="Wable.Button">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Wable.Body3</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Wable.Icon.Button" parent="Widget.Material3.Button.IconButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- tab -->
    <style name="Wable.Tab" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="tabIndicator">@drawable/shape_fill_2_rect</item>
        <item name="tabIndicatorColor">@color/purple_50</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPadding">11dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.Wable.Body2</item>
        <item name="tabSelectedTextAppearance">@style/TextAppearance.Wable.Body1</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/gray_600</item>
    </style>

    <!-- [image] -->
    <style name="WableCircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="WableRoundedImage8">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="WableRounded12">
        <item name="cornerSize">12dp</item>
    </style>
</resources>
